{
    "title": "Organisatie",
    "$id": "https://openwoo.app/schemas/organisatie.schema.json",
    "$schema": "https://docs.commongateway.nl/schemas/Entity.schema.json",
    "version": "0.0.1",
    "type": "object",
    "description": "Een organisatie die een publicatie of index ter beschicking steld",
    "properties": {
        "id": {
            "type": "string",
            "format": "uuid",
            "description":"De unieke identifier deze organisatie"
        },
        "titel": {
            "type": "string",
            "format": "text",
            "description":"De titel (naam) van een onderwerp",
            "minLength": 25,
            "maxLength": 255,
            "required": true
        },
        "samenvatting": {
            "type": "string",
            "format": "text",
            "description":"Een korte samenvatting van het onderwerp voor op de overzichts pagina",
            "minLength": 50,
            "maxLength": 2500,
            "required": true
        },
        "beschrijving": {
            "type": "string",
            "format": "text",
            "description":"Een uitgebreide beschrijving van het onderwerp voor weergave op de onderwerp pagina",
            "maxLength": 25000,
            "required": true
        },
        "afbeelding": {
            "type": "string",
            "format": ["url","base64"],
            "description":"Een afbeelding voor bij het onderwerp, mag worden opgegeven als verwijzing `url` of `base64` encoded image"
        },
        "uuid": {
            "type": "string"
        },
        "oin": {
            "type": "string"
        },
        "tooi": {
            "type": "string"
        },
        "rsin": {
            "type": "string"
        },
        "naam": {
            "type": "string",
            "required": true
        }
    },
    "required": [
        "titel",
        "samenvatting",
        "beschrijving"
    ]
}